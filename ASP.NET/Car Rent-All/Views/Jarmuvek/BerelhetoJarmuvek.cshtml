@model IEnumerable<Car_Rent_All.Models.Jarmu>

@{
    ViewBag.Title = "Bérelhető járművek";
}

<h2>Bérelhető Járművek</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var jarmu in Model)
    {
        <div class="col">
            <div class="card card h-100">
                <h3 class="card-header">@jarmu.Nev</h3>
                <div class="card-body">
                    <h5 class="card-title">Váltó: @jarmu.Valto.Nev</h5>
                    <h6 class="card-subtitle text-muted">Üzemanyag: @jarmu.Uzemanyag.Nev</h6>
                </div>
                <img src="~/Content/IMG/@jarmu.Kep" />
                <div class="card-body">
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Férőhelyek száma: @jarmu.Ules</li>
                    <li class="list-group-item">Ajtók száma: @jarmu.Ajtok</li>
                    <li class="list-group-item">Gyártás éve: @jarmu.GyartasEve</li>
                    <li class="list-group-item">Már napi @jarmu.Ar Ft-tól</li>
                </ul>
                <div class="card-body">
                    <a href="\Jarmuvek\Reszletek\@jarmu.Id" class="card-link">Részletes adatok</a>
                    <a href="\Szerzodesek\UjSzerzodes\@jarmu.Id" class="card-link">Árajánlatot kérek</a>
                </div>
            </div>
        </div>
    }
</div>


